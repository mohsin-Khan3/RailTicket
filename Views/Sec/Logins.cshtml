@model IEnumerable<RailTicket.Models.Login>

@{
    ViewData["Title"] = "Logins";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS styles */
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://cdn.pixabay.com/photo/2018/02/21/10/16/train-station-3169964_640.jpg');
            background-repeat: no-repeat;
            background-position: center;
            background-size: 1920px 950px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            /* padding: 20px; */
        }

        #ml {
            width: 400px;
            margin-left: 700px;
            color: white;
        }

        .my-row {
            width: 100%;
        }

       
    </style>
</head>
<body>

    <div class="container">
        <div class="bg">

            <div class="container" id="ml">

                <div class="row my-row">
                    <!-- Login Form -->
                    <div class="col-md-12">
                        <div class="login-container">
                            <h2>Login</h2>
                           
                            <form method="get" asp-action="Logins1" asp-controller="Sec">
                                <br />
                                <br />
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" id="username" name="username" placeholder="Enter your Email">
                                </div>
                                <br />

                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" id="password" name="password" placeholder="Enter your password">
                                </div>

                                <br />
                                <div style=" color: red;"><b>
                                    @Html.ValidationSummary()
                                    </b>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <div class="btn-container">
                                            <button type="submit" class="justify-content-center login-btn">Login</button>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="btn-container">
                                            <button type="button" class="justify-content-center login-btn"> <a href="/Sec/User_Registrations/" style="color:black;text-decoration:none;">Register</a></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


   
    <script>
        // Custom JavaScript/jQuery code
        $(document).ready(function () {
            let currentDate = new Date();
            let hour = currentDate.getHours();
            let greeting = "";

            if (hour < 12) {
                greeting = "Good morning!";
            } else if (hour < 18) {
                greeting = "Good afternoon!";
            } else {
                greeting = "Good evening!";
            }

            $("h2").text(greeting + "  Login Here");
        });
    </script>
</body>
</html>